<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:splitMotionEvents="true"
    >

   <LinearLayout
        android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    >
	    <RelativeLayout android:id="@+id/top_panel"
		    android:layout_width="320dp"
            android:layout_height="240dp"
		    >
	    
				<!-- GAME IMAGE -->    
				<ImageView android:id="@+id/wolf_iv" 
				    android:layout_width="fill_parent" 
				    android:layout_height="fill_parent" 
				    android:adjustViewBounds="true"
				    android:scaleType="fitXY"
				    android:visibility="visible"
				    android:focusableInTouchMode="true" 
				    android:focusable="true"
				    />
			        
			    <!-- Other controls: Exit -->
				<TableLayout android:id="@+id/another_ctls"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_alignParentTop="true"
				        android:layout_alignParentRight="true"
				        android:visibility="gone"
						android:focusable="false" 
						android:focusableInTouchMode="false">
						
					<TableRow>
					
				    <ImageButton android:id="@+id/btn_exit"
				        android:layout_width="48dp" 
				        android:layout_height="48dp" 
				        android:scaleType="fitXY"
				        android:background="#00000000"
				        android:layout_margin="0dp"
				        android:src="@drawable/exit"
				         />
			
				       
					</TableRow>
				</TableLayout>   
			    
			    <!-- Trick -->
				<TableLayout android:id="@+id/trick_ctls"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_alignParentBottom="true"
				        android:layout_centerHorizontal="true"
				        android:visibility="gone"
						android:focusable="false" 
						android:focusableInTouchMode="false">
						
					<TableRow>
			
			      	    <ImageButton android:id="@+id/btn_trick"
				        android:layout_width="48dp" 
				        android:layout_height="48dp" 
				        android:scaleType="fitXY"
				        android:background="#00000000"
				        android:layout_margin="0dp"
				        android:src="@drawable/blank"
				         />
					
					    		
				</TableRow>
				</TableLayout>    
								
			    <!-- Help -->
				<TableLayout android:id="@+id/other_ctls"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_alignParentTop="true"
				        android:layout_alignParentLeft="true"
				        android:visibility="gone"
						android:focusable="false" 
						android:focusableInTouchMode="false">
						
					<TableRow>
			
			      	    <ImageButton android:id="@+id/btn_quicksave"
				        android:layout_width="48dp" 
				        android:layout_height="48dp" 
				        android:scaleType="fitXY"
				        android:background="#00000000"
				        android:layout_margin="0dp"
				        android:src="@drawable/quicksave"
				         />
					
			      	    <ImageButton android:id="@+id/btn_help"
				        android:layout_width="wrap_content" 
				        android:layout_height="wrap_content" 
				        android:background="#00000000"
				        android:visibility="gone"
				        android:layout_margin="0dp"
				        android:src="@drawable/help"
				         />
					
			      	    					    		
					</TableRow>
				</TableLayout>    

			    <!-- Switch Guns -->
				<TableLayout android:id="@+id/other_swguns"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_alignParentBottom="true"
				        android:layout_alignParentRight="true"
						android:focusable="false" 
						android:focusableInTouchMode="false">
						
					<TableRow>
			
	      	    <ImageButton android:id="@+id/btn_swguns1"
		        android:layout_width="96dp" 
		        android:layout_height="48dp" 
		        android:scaleType="fitXY"
		        android:background="#00000000"
		        android:layout_margin="0dp"
		        android:src="@drawable/blank"
		         />
					
	      	    <ImageButton android:id="@+id/btn_swguns2"
		        android:layout_width="96dp" 
		        android:layout_height="48dp" 
		        android:scaleType="fitXY"
		        android:visibility="gone"
		        android:background="#00000000"
		        android:layout_margin="0dp"
		        android:src="@drawable/blank"
		         />
					
	      	    <ImageButton android:id="@+id/btn_swguns3"
		        android:layout_width="96dp" 
		        android:layout_height="48dp" 
		        android:scaleType="fitXY"
		        android:visibility="gone"
		        android:background="#00000000"
		        android:layout_margin="0dp"
		        android:src="@drawable/blank"
		         />
					
	      	    </TableRow>
				</TableLayout>    
		
								
						
		</RelativeLayout>
		
	</LinearLayout>
	    
    <LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    >
			
    
		 <RelativeLayout 
					android:id="@+id/snes"
				    android:orientation="vertical"
				    android:layout_width="320dp"
				    android:layout_height="240dp"
				    android:background="@drawable/snes_num"
					android:focusable="false" 
					android:focusableInTouchMode="false"
				    android:visibility="gone"
				    android:splitMotionEvents="true"
				    >
					
				    <ImageButton android:id="@+id/btn_trans_1"
				        android:layout_width="48dp" 
				        android:layout_height="48dp" 
				        android:scaleType="fitXY"
				        android:background="#00000000"
				        android:src="@drawable/blank"
				        android:layout_marginLeft="56dp" android:layout_marginTop="3dp"
				         />
			
				    <ImageButton android:id="@+id/btn_trans_2"
				        android:layout_width="48dp" 
				        android:layout_height="48dp" 
				        android:scaleType="fitXY"
				        android:background="#00000000"
				        android:src="@drawable/blank"
				        android:layout_marginLeft="110dp" android:layout_marginTop="3dp"
				         />
			
				    <ImageButton android:id="@+id/btn_trans_3"
				        android:layout_width="48dp" 
				        android:layout_height="48dp" 
				        android:scaleType="fitXY"
				        android:background="#00000000"
				        android:src="@drawable/blank"
				        android:layout_marginLeft="164dp" android:layout_marginTop="3dp"
				         />
			
				    <ImageButton android:id="@+id/btn_trans_4"
				        android:layout_width="48dp" 
				        android:layout_height="48dp" 
				        android:scaleType="fitXY"
				        android:background="#00000000"
				        android:src="@drawable/blank"
				        android:layout_marginLeft="218dp" android:layout_marginTop="3dp"
				         />
		     				    
				<!-- Arrows -->
			    <ImageButton android:id="@+id/btn_up"
			        android:layout_width="48dp" 
			        android:layout_height="48dp" 
			        android:scaleType="fitXY"
			        android:background="#00000000"
	                android:src="@drawable/blank" android:layout_marginLeft="48dp" android:layout_marginTop="60dp"/>
		
			    <ImageButton android:id="@+id/btn_down"
			        android:layout_width="48dp" 
			        android:layout_height="48dp" 
			        android:scaleType="fitXY"
			        android:background="#00000000"
					android:src="@drawable/blank" android:layout_marginLeft="45dp" android:layout_marginTop="128dp"/>
			    		
			    <ImageButton android:id="@+id/btn_left"
			        android:layout_width="48dp" 
			        android:layout_height="48dp" 
			        android:scaleType="fitXY"
			        android:background="#00000000"
					android:src="@drawable/blank" android:layout_marginLeft="6dp" android:layout_marginTop="99dp"/>
		
			    <ImageButton android:id="@+id/btn_right"
			        android:layout_width="48dp" 
			        android:layout_height="48dp" 
			        android:scaleType="fitXY"
			        android:background="#00000000"
			        android:src="@drawable/blank" android:layout_marginLeft="80dp"  android:layout_marginTop="99dp"/>
		    
		    	<!-- Select/Start -->
			    <ImageButton android:id="@+id/btn_select"
			        android:layout_width="48dp" 
			        android:layout_height="48dp" 
			        android:scaleType="fitXY"
			        android:background="#00000000"
			        android:src="@drawable/blank"  android:layout_marginLeft="110dp" android:layout_marginTop="192dp"/>
			        
			    <ImageButton android:id="@+id/btn_start"
			        android:layout_width="48dp" 
			        android:layout_height="48dp" 
			        android:scaleType="fitXY"
			        android:background="#00000000"
			        android:src="@drawable/blank" android:layout_marginLeft="160dp" android:layout_marginTop="192dp"/>
			    
			    <!-- Menu -->
			    <ImageButton android:id="@+id/btn_menu"
			        android:layout_width="48dp" 
			        android:layout_height="48dp"
			        android:scaleType="fitXY" 
			        android:background="#00000000"
			        android:src="@drawable/blank" android:layout_marginLeft="2dp" android:layout_marginTop="192dp"/>
			    
		    	
		    	<!-- X/Y -->
			    <ImageButton android:id="@+id/btn_X"
			        android:layout_width="48dp" 
			        android:layout_height="48dp" 
			        android:scaleType="fitXY"
			        android:background="#00000000"
			        android:src="@drawable/blank"  android:layout_marginLeft="223dp" android:layout_marginTop="63dp"/>
			        
			    <ImageButton android:id="@+id/btn_Y"
			        android:layout_width="48dp" 
			        android:layout_height="48dp" 
			        android:scaleType="fitXY"
			        android:background="#00000000"
			        android:src="@drawable/blank" android:layout_marginLeft="174dp" android:layout_marginTop="99dp"/>
		    	
		    	<!-- A/B -->
			    <ImageButton android:id="@+id/btn_A"
			        android:layout_width="48dp" 
			        android:layout_height="48dp" 
			        android:scaleType="fitXY"
			        android:background="#00000000"
			        android:src="@drawable/blank" android:layout_marginLeft="267dp" android:layout_marginTop="99dp" />
			        
			    <ImageButton android:id="@+id/btn_B"
			        android:layout_width="48dp" 
			        android:layout_height="48dp" 
			        android:scaleType="fitXY"
			        android:background="#00000000"
			        android:src="@drawable/blank" android:layout_marginLeft="223dp" android:layout_marginTop="141dp"/>
		    	
		</RelativeLayout>
	
    </LinearLayout>
    
</LinearLayout>
